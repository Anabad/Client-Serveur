{
  "name": "reactjs-basics",
  "version": "1.0.0",
  "description": "Some basic ReactJS",
  "main": "index.js",
  "scripts": {
    "start": "npm run build",
    "build": "webpack -d && xcopy \"src/index.html\" \"dist/\" /F /Y && webpack-dev-server --content-base src/ --inline --history-api-fallback",
    "build:prod": "webpack -p && xcopy \"src/index.html\" \"dist/\" /F /Y",
    "test": "xo"
  },
  "keywords": [
    "reactjs"
  ],
  "author": "Antoine Collot",
  "license": "MIT",
  "dependencies": {
    "fixed-data-table": "^0.6.3",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "react-http-request": "^1.0.2",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "redux": "^3.6.0"
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-2": "^6.11.0",
    "jsmin": "^1.0.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "xo": "^0.17.1"
  },
  "xo": {
    "esnext": true,
    "envs": [
      "node"
    ],
    "space": 2,
    "ignores": [
      "Gruntfile.js",
      "webpack.config.js",
      "src/js/**",
      "src/assets/**"
    ]
  }
}
